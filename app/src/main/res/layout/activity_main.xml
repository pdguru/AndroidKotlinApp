<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <SearchView android:layout_width="match_parent" android:layout_height="30dp" android:id="@+id/main_searchView"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/main_listview"/>

    <ListView android:layout_width="match_parent" android:layout_height="465dp"
              app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:id="@+id/main_listview"
              app:layout_constraintTop_toBottomOf="@+id/main_searchView"
              app:layout_constraintHorizontal_bias="0.0"></ListView>

</android.support.constraint.ConstraintLayout>